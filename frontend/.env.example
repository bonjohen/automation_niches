# =============================================================================
# SMB Compliance Platform - Frontend Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API URL (for production deployments)
# Leave empty in development - Next.js will proxy to localhost:8000
NEXT_PUBLIC_API_URL=

# -----------------------------------------------------------------------------
# App Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_NAME="Compliance Platform"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Feature Flags (optional)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DARK_MODE=false
