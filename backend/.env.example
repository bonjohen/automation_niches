# =============================================================================
# SMB Compliance Platform - Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME="SMB Compliance Platform"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# API Settings
# -----------------------------------------------------------------------------
API_PREFIX=/api/v1
# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/compliance_db
DATABASE_ECHO=false

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# IMPORTANT: Generate a secure random key for production
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-in-production-use-a-real-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# External Auth Provider (optional)
# Options: firebase, auth0, or leave empty for local auth
AUTH_PROVIDER=
FIREBASE_PROJECT_ID=
AUTH0_DOMAIN=
AUTH0_API_AUDIENCE=

# -----------------------------------------------------------------------------
# Cloud Storage
# -----------------------------------------------------------------------------
# Options: local, s3, gcs
STORAGE_BACKEND=local
LOCAL_STORAGE_PATH=./storage

# AWS S3 (if STORAGE_BACKEND=s3)
STORAGE_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Google Cloud Storage (if STORAGE_BACKEND=gcs)
GCS_PROJECT_ID=

# -----------------------------------------------------------------------------
# AI / LLM Settings
# -----------------------------------------------------------------------------
# OpenAI API key for document extraction
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
EXTRACTION_CONFIDENCE_THRESHOLD=0.8

# -----------------------------------------------------------------------------
# OCR Settings
# -----------------------------------------------------------------------------
# Path to Tesseract executable (if not in PATH)
TESSERACT_PATH=
# Set to true to use Google Vision API instead of Tesseract
USE_GOOGLE_VISION=false
GOOGLE_VISION_API_KEY=

# -----------------------------------------------------------------------------
# Email Settings
# -----------------------------------------------------------------------------
# Options: console (print to logs), sendgrid, mailgun
EMAIL_PROVIDER=console
EMAIL_FROM_ADDRESS=noreply@compliance.local
EMAIL_FROM_NAME=Compliance Platform

# SendGrid (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=

# Mailgun (if EMAIL_PROVIDER=mailgun)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# -----------------------------------------------------------------------------
# Redis / Background Tasks
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Niche Configuration
# -----------------------------------------------------------------------------
# Path to YAML niche configuration files
NICHES_CONFIG_PATH=./configs/niches
